<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg1"
    tools:context=".MainActivity">


    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="362dp"
        android:id="@+id/hoteltitle"
        android:layout_height="259dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/hoteltitle"
        android:textColorHighlight="#755F5F"
        android:textColorLink="#CDB8B8" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/myPageBtn"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:backgroundTint="#4682B4"
                android:visibility="gone"
                android:textStyle="bold"
                android:textSize="8pt"
                android:onClick="GomyPage"
                android:text="마이페이지" />

            <Button
                android:id="@+id/restaurantBtn"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:backgroundTint="#FFA500"
                android:textStyle="bold"
                android:visibility="gone"
                android:textSize="8pt"
                android:onClick="goRes"
                android:text="식당안내" />

        </LinearLayout>

        <Button
            android:id="@+id/reservationBtn"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:textSize="10pt"
            android:textStyle="bold"
            android:visibility="visible"
            android:backgroundTint="#3333FF"
            android:onClick="takeReservation"
            android:text="청양호텔 예약" />

        <Button
            android:id="@+id/reservationBtn2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:backgroundTint="#F2852F"
            android:onClick="takeReservation2"
            android:text="논산호텔 예약"
            android:textSize="10pt"
            android:textStyle="bold"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/roomServiceBtn"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:visibility="gone"
                android:backgroundTint="#3CB371"
                android:textSize="8pt"
                android:onClick="goRoomService"
                android:text="룸서비스"/>

            <Button
                android:id="@+id/meetingRoomBtn"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:visibility="gone"
                android:backgroundTint="#BC8F8F"
                android:onClick="goMeetingroom"
                android:textSize="8pt"
                android:text="회의실" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>